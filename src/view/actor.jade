div
  .row-fluid
    .span12
      form.form-horizontal
        .control-group
          label.control-label Name
          .controls
            input.span4(type="text", ng-model="actor.name", on-blur-change="changeName()")
  .row-fluid
    .span1
    .span10
      table.table.role-table
        thead
          tr
            th.span12 Movie
            th &nbsp;
            th.span12 Role
            th &nbsp;
        tbody
          tr(ng-repeat="r in actor.roles")
            td
              input.span12(
                  type="hidden",
                  ui-select2="suggestMovie($index)",
                  value="{{r.movieId}}",
                  on-select2-change="changeRoleMovie($index)")
            td
              button.btn(ng-click="gotoRoleMovie($index)")
                i.icon-film
            td
              input.span12(type="text", ng-model="r.role", on-blur-change="changeRoleName($index)")
            td
              button.btn.pull-right(ng-click="removeRole($index)")
                i.icon-remove-sign
          tr#newRole
            td
              input.span12(type="hidden", ui-select2="suggestMovie(-1)", ng-model="newRoleMovieId")
            td &nbsp;
            td
              input.span12(type="text", ng-model="newRole.role")
            td
              button.btn.pull-right(ng-disabled="!(newRole.movieId && newRole.role)", ng-click="addRole()")
                i.icon-ok-sign
  .row-fluid
    .span12
      form.form-horizontal
        .form-actions
          button#remove.btn.btn-primary(type="button", ng-click="remove()") Remove
